<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/venues_list_item_size"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_width="@dimen/venues_list_imageView_size"
        android:layout_height="@dimen/venues_list_imageView_size"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginTop="@dimen/venues_list_margin_top"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/words_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/venues_list_item_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_item_icon"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/top_padding">

        <TextView
            android:id="@+id/venue_name_list"
            style="@style/VenuesListTextViews"
            android:gravity="bottom"
            android:textStyle="bold"
            tools:text="One" />

        <TextView
            android:id="@+id/venue_description_list"
            style="@style/VenuesListTextViews"
            android:layout_gravity="top"
            android:layout_marginRight="@dimen/large_margin"
            tools:text="lutti" />
    </LinearLayout>

</RelativeLayout>