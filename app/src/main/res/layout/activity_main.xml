<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:frisson="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ai.thanasakis.uda.tourguide.tourguide.MainActivity">

        <com.intrusoft.library.FrissonView
            android:id="@+id/wave_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frissonMain"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            frisson:alphaValue="10"
            frisson:src="@drawable/mainlogo2"
            frisson:tideCount="4"
            frisson:tideHeight="@dimen/tideHeight"
            frisson:tintColor="@color/black" />

        <TextView
            android:id="@+id/text_headLine1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginTop="@dimen/top_padding"
            android:includeFontPadding="false"
            android:text="@string/headline1"
            android:textColor="@color/white"
            android:textSize="@dimen/headLine1" />

        <TextView
            android:id="@+id/text_headLine2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_headLine1"
            android:layout_marginRight="@dimen/medium_margin"
            android:includeFontPadding="false"
            android:text="@string/headline2"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/headLine2" />

        <ListView
            android:id="@+id/list_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/wave_head" />
    </RelativeLayout>
</layout>